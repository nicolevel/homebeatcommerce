</article> <!-- card-body.// -->
    </aside> <!-- col.// -->
  </div> <!-- row.// -->
</div> <!-- card.// -->
</div>

<hr>
<div class="container mt-5">
<h2>Mas Productos</h2>
<div>
<%= render 'shared/cards' %>
</div>
<%#= render 'shared/carousel' %>

</div>
