<%= render "shared/navbar" %>
<%= render "shared/paralax2" %>

<div class="container" style="margin-top: 115px; margin-bottom: -20px;">
<%= render_breadcrumbs %>
</div>
<div class="container separator">
<div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;">
  <div class="row no-gutters">
    <aside class="col-sm-5 border-right">
<article class="gallery-wrap">
<div class="img-big-wrap" style="margin-top: 30%;">
  <%= cl_image_tag @item.photo, class: "demo-trigger", size: '90%' %>
</div> <!-- slider-nav.// -->
</article> <!-- gallery-wrap .end// -->
    </aside>
    <aside class="col-sm-7 detail">
<article class="p-5">
  <h3 class="title mb-3">  <%= @item.nombre %> </h3>
<em class="title mb-3">  <%= @item.features %> </em>
<div class="mb-3">
  <var class="price h3 text-warning">
    <span class="currency">US $</span><span class="num"> <%= @item.precio %></span>
  </var>
</div> <!-- price-detail-wrap .// -->
<dl>
  <dt>Description</dt>
  <dd><p><%= @item.descripcion %> </p></dd>
</dl>

<div class="rating-wrap">


</div> <!-- rating-wrap.// -->
<hr>
  <div class="row mt-5">

  <dt class="col-sm-3">Marca</dt>
  <dd class="col-sm-9"><%= @item.marca %></dd>

  <dt class="col-sm-3">Color</dt>
  <dd class="col-sm-9"><%= @item.color %> </dd>

  <dt class="col-sm-3">Categoria</dt>
  <dd class="col-sm-9"><%= @item.categoria %> </dd>
  </div> <!-- row.// -->
